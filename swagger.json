  "paths": {
    "/product": {
      "post": {
        "summary": "Cria produto",
        "description": "Cria um novo produto",
        "tags": ["Product"],
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "Produto criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                },
                "examples": {
                  "product": {
                    "value": {
                      "description": "Milkshake de chocolate"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Atualiza o produto",
        "description": "Atualiza um produto pelo id",
        "tags": ["Product"],
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "Produto criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                },
                "examples": {
                  "product": {
                    "value": {
                      "description": "Milkshake de chocolate"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove o produto",
        "description": "Remove um produto pelo id",
        "tags": ["Product"],
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "Produto criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                },
                "examples": {
                  "product": {
                    "value": {
                      "description": "Milkshake de chocolate"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}